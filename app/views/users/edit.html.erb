<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <div id="errors_list">
    <h4>Ah ah ah! You didn't say the magic word!</h4>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li class="error"><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <p><%= f.label :username %>: 
    <%= f.text_field :username %></p>

    <p><%= f.label :profile %>: <br>
    <%= f.text_area(:profile, size: "50x15") %></p>

    <%= f.submit "Edit Proile" %>
<% end %>
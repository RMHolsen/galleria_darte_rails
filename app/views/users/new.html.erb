<h2>Please Sign Up</h2>
<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <div id="errors_listed">
        <h4>Ah ah ah! You didn't say the magic word!</h4>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li class="error"><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <p><%= f.label :username %>
    <%= f.text_field :username %></p>
    
    <p><%= f.label :password %>
    <%= f.password_field :password %></p>

    <%= f.submit "Sign Up" %>
<% end %>